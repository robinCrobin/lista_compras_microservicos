{
    "name": "api-gateway",
    "version": "1.0.0",
    "description": "API Gateway para MicrosserviÃ§os com Circuit Breaker - PUC Minas",
    "main": "server.js",
    "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
