      "morgan": "^1.10.0",
      "axios": "^1.6.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.0"
    },
    "nodemonConfig": {
      "watch": [
        "server.js",
        "../shared/"
      ],
      "ext": "js,json",
      "ignore": [
        "node_modules/"
      ]
    },
    "environment": {
      "PORT": 3000,
      "NODE_ENV": "development",
